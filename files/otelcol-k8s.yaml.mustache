---
apiVersion: v1
kind: Secret
metadata:
  name: otelcol-k8s
  namespace: kube-system
type: Opaque
stringData:
  endpoint: "https://{{ betterstack_ingesting_host }}"
  token: "Bearer {{ betterstack_source_token }}"
---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: otelcol-k8s
  namespace: kube-system
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
  name: otelcol-k8s
rules:
  - apiGroups:
      - ""
    resources:
      - events
      - namespaces
      - namespaces/status
      - nodes
      - nodes/spec
      - pods
      - pods/status
      - replicationcontrollers
      - replicationcontrollers/status
      - resourcequotas
      - services
    verbs:
      - get
      - list
      - watch
  - apiGroups:
      - apps
    resources:
      - daemonsets
      - deployments
      - replicasets
      - statefulsets
    verbs:
      - get
      - list
      - watch
  - apiGroups:
      - extensions
    resources:
      - daemonsets
      - deployments
      - replicasets
    verbs:
      - get
      - list
      - watch
  - apiGroups:
      - batch
    resources:
      - jobs
      - cronjobs
    verbs:
      - get
      - list
      - watch
  - apiGroups:
      - autoscaling
    resources:
      - horizontalpodautoscalers
    verbs:
      - get
      - list
      - watch
  - apiGroups:
      - discovery.k8s.io
    resources:
      - endpointslices
    verbs:
      - get
      - list
      - watch
---
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: otelcol-k8s
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: otelcol-k8s
subjects:
  - kind: ServiceAccount
    name: otelcol-k8s
    namespace: kube-system
---
apiVersion: v1
kind: ConfigMap
metadata:
  name: otelcol-k8s
  namespace: kube-system
data:
  config.yaml: |
    receivers:
      k8s_events:
        auth_type: serviceAccount
      k8s_cluster:
        collection_interval: 10s
        auth_type: serviceAccount
        node_conditions_to_report:
          - Ready
          - MemoryPressure
          - DiskPressure
        allocatable_types_to_report:
          - cpu
          - memory

    exporters:
      otlphttp:
        endpoint: ${env:BETTERSTACK_ENDPOINT}
        headers:
          Authorization: ${env:BETTERSTACK_TOKEN}

    service:
      pipelines:
        logs:
          receivers: [k8s_events]
          exporters: [otlphttp]
        metrics:
          receivers: [k8s_cluster]
          exporters: [otlphttp]
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: otelcol-k8s
  namespace: kube-system
spec:
  replicas: 1
  strategy:
    type: Recreate
  selector:
    matchLabels:
      app: otelcol-k8s
  template:
    metadata:
      labels:
        app: otelcol-k8s
    spec:
      serviceAccountName: otelcol-k8s
      containers:
        - name: otelcol-k8s
          image: otel/opentelemetry-collector-contrib:0.145.0
          args:
            - --config=/etc/otelcol/config.yaml
          env:
            - name: BETTERSTACK_ENDPOINT
              valueFrom:
                secretKeyRef:
                  name: otelcol-k8s
                  key: endpoint
            - name: BETTERSTACK_TOKEN
              valueFrom:
                secretKeyRef:
                  name: otelcol-k8s
                  key: token
          volumeMounts:
            - name: config
              mountPath: /etc/otelcol
              readOnly: true
      volumes:
        - name: config
          configMap:
            name: otelcol-k8s
